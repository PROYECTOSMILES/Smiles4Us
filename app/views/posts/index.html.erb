<div class="container">
</br></br></br>
	<h1>Listado de posts</h1>

	
<ul class='thumbnail' id='posts'  >
	<div class="row" draggable="true">
		<% @posts.each do |post| %>

		<div id='post'>
			
			<div class="col-xs-12 col-sm-4" >
				
			<li  class='span4'>
				
					<div class='thumbnail'>

						<% if post.has_photo? %>
						<%= image_tag post.photo_path %>
						<% end %>
						<div class='caption'>
							<h3><%= link_to post.titulo, post %></h3>
							<button type="button" class="btn btn-default btn-lg">
								<span class="glyphicon glyphicon-heart-empty"></span> Me gusta
							</button>
							<button type="button" class="btn btn-default btn-lg">
								<span class="glyphicon glyphicon-pencil"></span> Comentarios
							</button>
						</div>
					</div>
			</li>
		</div>

		<% end %>
		</ul>
		<a class="btn btn-default" href="/posts/new" role="button"><span class="glyphicon glyphicon-upload" > </span> Nuevo post</a>
	</div>

	</br>

	
</div>
</div>