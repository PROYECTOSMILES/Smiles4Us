<%= form_for(@usuario) do |f|  %>
<% if @usuario.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@usuario.errors.count, "error") %> ..verifica que tus datos sean correctos :</h2>

	<ul>
		<% @usuario.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
  	<div class="col-md-4"></div>
  	<div class="col-md-4">

	  	<form class="form-horizontal" accept-charset="UTF-8" role="form" action="/usuarios/create" class="new_usuario" id="new_usuario" method="post">

		  	<div class="form-group">
				<div class="col-sm-10">
					<div class="field">
						<%= f.text_field :username, class: 'form-control',:placeholder => "Nombre de usuario" %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-10">
					<div class="field">
						<%= f.text_field :email, class: 'form-control',:placeholder => "Correo electronico" %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-10">
					<div class="field">
						<%= f.password_field :password, class: 'form-control',:placeholder => "Contraseña" %>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-10">
					<div class="field">
						<%= f.password_field :password_confirmation, class: 'form-control',:placeholder => "Confirmar contraseña"%>
					</div>
				</div>
			</div>
				
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					</br>
					<div class="actions" >
						<%= f.submit "Regístrate", class: "btn btn-primary btn-lg" %>
					</div>
				</div>
			</div>
		</form>
	</div>
  	<div class="col-md-4"></div>
</div>

</br>
</br>
<br/>
</br></br>
<br/>
</br></br>

<% end %>

